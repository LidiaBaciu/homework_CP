    struct lista *Lista = malloc( sizeof(struct lista) );
    int i;
    Lista->nextElement = NULL;

    for(i = 0; i < 5; i++)
        addToEnd(Lista);
    showList(Lista);

    int temp;
    temp = Count(Lista, 2);
