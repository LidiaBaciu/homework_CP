#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    int vector[10];
    int i;
    int flag=1;
    int suma_initiala=-1;
    int suma_modificata=0;

    printf("Numarul n este:");
    scanf("%d", &n);
    putchar('\n');

    for(i=0; i<n; i++)
    {
        printf("Elementul [%d] este:", i);
        scanf("%d", &vector[i]);
    }

    suma_initiala=vector[1]-vector[0];

    i=1;

    while(i<n-1 && flag==1)
    {
        suma_modificata=vector[i+1] - vector[i];
        if(suma_initiala != suma_modificata) flag=0;
        i++;
    }

    if(flag==1) printf("Numerele sunt in progresie aritmetica, iar ratia lor este %d", suma_initiala);
        else
            printf("Numerele nu sunt in progresie aritmetica");

    return 0;
}
