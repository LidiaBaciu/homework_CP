#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char vector_aparitii[256];

int main()
{
    char string[25];
    int counter=1;
    gets(string);
    int i, n;
    n=strlen(string);
    char c;
    int count=0;

    for(i=0; i<n; i++)
        if(string[i]==' '&&string[i+1]>='a'&&string[i+1]<='z')counter++;

    printf("Avem %d cuvinte:", counter);
    putchar('\n');

    for(i=0; i<n; i++)
    {
        c=string[i];
        vector_aparitii[c]++;
    }

    for(i=0; i<256; i++)
    {
        c=i;
        if(vector_aparitii[i] != 0)
        {
            count=vector_aparitii[i];
            printf("Caracterul [%c] a aparut de %d ori ", c, count);
            putchar('\n');
        }
    }


    return 0;
}
