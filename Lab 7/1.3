
#include <stdio.h>
#include <stdlib.h>

struct lista{

    int value;
    struct lista* nextElement;

};

void addToEnd(struct lista* modifier){

    int value;
    struct lista* newElement = malloc( sizeof(struct lista) );

    while(modifier->nextElement != NULL)
        modifier = modifier->nextElement;

    printf("\nIntroduceti o valoare(adaugare la final): ");
    scanf("%d", &value);

    modifier->nextElement = newElement;
    newElement->nextElement = NULL;
    newElement->value = value;


}

void showList(struct lista* modifier){

    printf("\nLista: ");

    while(modifier->nextElement != NULL){

        modifier = modifier->nextElement;
        printf("%d ", modifier->value);


    }

    printf("\n");

}

void catList(struct lista* modifier1, struct lista* modifier2){

    while(modifier1->nextElement != NULL){
        modifier1 = modifier1->nextElement;
    }

    modifier1->nextElement = modifier2;

}

int main(){


    struct lista *Lista = malloc( sizeof(struct lista) );

    struct lista *Lista2 = malloc( sizeof(struct lista) );

    int i;
    Lista->nextElement = NULL;
    Lista2->nextElement = NULL;


    printf("Elementele primei liste sunt:");
    for(i = 0; i < 3; i++)
        addToEnd(Lista);
    showList(Lista);
    putchar('\n');

    printf("Elementele pentru a2a lista sunt:");
    for(i = 0; i < 3; i++)
        addToEnd(Lista2);
    showList(Lista2);
    putchar('\n');

    catList(Lista, Lista2);
    showList(Lista);


return 0;
}

