#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    int converted=0;
    int p=1;
    int c;

    printf("Numarul n este=");
    scanf("%d", &n);

    while(n!=0)
    {
        c=n%2;
        n=n/2;
        converted=converted+c*p;
        p=p*10;
    }

    putchar('\n');
    printf("Numarul convertit este:");
    printf("%d", converted);

return 0;
}
